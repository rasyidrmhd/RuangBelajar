<%- include('../partials/htmlHeader') %>
<h1>Register</h1>

<% if (message) { %> <% message.forEach(m => { %>
<p><%= m %></p>
<% }) %> <% } %>

<form action="/auth/register" method="POST">
  <label for="username">Username</label>
  <input type="text" name="username" id="username" placeholder="Your unique username" autocomplete="off" /><br /><br />
  <label for="email">Email</label>
  <input type="text" name="email" id="email" placeholder="Your own email" autocomplete="off" /><br /><br />
  <label for="pass">Password</label>
  <input type="password" name="password" id="pass" placeholder="Your secure password" autocomplete="off" /><br /><br />
  <label for="role">Role</label>
  <select name="role" id="role">
    <option value="pengajar">Pengajar</option>
    <option value="siswa">Siswa</option>
  </select>
  <button type="submit">Daftar</button>
</form>

<p>Sudah punya akun? Login <a href="/auth">disini</a></p>
<%- include('../partials/htmlFooter') %>
